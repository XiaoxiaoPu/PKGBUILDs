# Maintainer:  Shaw <puxx@mail.ustc.edu.cn>

pkgname=create_ap
pkgver=git~20131216
pkgrel=1
pkgdesc="A shell script to create a NATed/Bridged Software Access Point(aka WiFi)"
arch=('any')
url="https://github.com/oblique/create_ap"
license=('FreeBSD')
depends=('hostapd' 'iproute2' 'iw' 'dnsmasq' 'iptables' 'bridge-utils' 'dhclient')
optdepends=('haveged')
install=create_ap.install
source=(https://raw.github.com/oblique/create_ap/master/create_ap
        https://raw.github.com/oblique/create_ap/master/create_ap.service)
md5sums=('SKIP'
         'SKIP')

package() {
	cd "${srcdir}/"
	install -Dm755 "create_ap" "${pkgdir}/usr/bin/create_ap"
	install -Dm644 "create_ap.service" "${pkgdir}/usr/share/create_ap/create_ap.service.example"
}

