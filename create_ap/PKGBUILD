# Maintainer:  Xiaoxiao Pu <i@patme.net>

pkgname=create_ap
pkgver=git~20140903
pkgrel=1
pkgdesc="A shell script to create a NATed/Bridged Software Access Point"
arch=('any')
url="https://github.com/oblique/create_ap"
license=('BSD')
depends=('bash' 'hostapd' 'iproute2' 'iw' 'dnsmasq'
         'iptables' 'bridge-utils')
optdepends=('haveged: boost low entropy')
install=create_ap.install
_commit=0ba638f7808ab3019bf8b02ebe354556f7f084eb
source=("https://github.com/oblique/create_ap/archive/${_commit}.tar.gz")
sha256sums=('1c4dd44bd1c58c30615c8627760be4e405bafe37f88853b1bd8fc675224ae806')

build() {
	cd "${srcdir}/create_ap-${_commit}/"
	sed -i 's/#!\/bin\/bash/#!\/usr\/bin\/env bash/g' create_ap
}
package() {
	cd "${srcdir}/create_ap-${_commit}/"
	install -Dm755 "create_ap" "${pkgdir}/usr/bin/create_ap"
	install -Dm644 "LICENSE" "${pkgdir}/usr/share/licenses/create_ap/LICENSE"
	install -Dm644 "create_ap.service" "${pkgdir}/usr/share/doc/create_ap/create_ap.service"
}