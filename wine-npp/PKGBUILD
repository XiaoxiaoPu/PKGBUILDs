# Maintainer: Shaw <puxx@mail.ustc.edu.cn>

pkgname=wine-npp
pkgver=6.4.5
pkgrel=1
pkgdesc="Wine version of Notepad++,a free source code editor"
arch=(any)
url="http://notepad-plus-plus.org/"
license=('GPL')
depends=('wine')
makedepends=('unzip')
source=(http://download.tuxfamily.org/notepadplus/$pkgver/npp.$pkgver.bin.zip
        $pkgname.sh
        $pkgname.desktop
        $pkgname.ico)
noextract=(npp.$pkgver.bin.zip)
md5sums=('5b1b45d4bf698ceebfed089964b72728'
         'def0f0394b52fa1c303c3efce58e4c7b'
         'ae6e9709d54aae8caaf747ff4d2d6e1a'
         'e6fda7e8b433fd915c2fda2f5a627ebc')

package() {
	mkdir -p $pkgdir/usr/share/$pkgname
	unzip npp.$pkgver.bin.zip -d $pkgdir/usr/share/$pkgname
	install -Dm755 $srcdir/$pkgname.sh $pkgdir/usr/bin/$pkgname
	install -Dm644 $srcdir/$pkgname.desktop $pkgdir/usr/share/applications/$pkgname.desktop
	install -Dm644 $srcdir/$pkgname.ico $pkgdir/usr/share/$pkgname/$pkgname.ico
}

